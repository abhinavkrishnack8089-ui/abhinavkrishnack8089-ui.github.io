  <script>
    // populate year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Simple modal logic with sample content
    const PROJECTS = {
      1: { title: 'Project One', role: 'Full‑Stack Developer', details: 'This project solves X by doing Y. Include metrics and lessons learned.', demo:'#', github:'#' },
      2: { title: 'Project Two', role: 'Frontend Lead', details: 'Short case study and impact statement.', demo:'#', github:'#' },
      3: { title: 'Project Three', role: 'Backend Engineer', details: 'Short case study and impact statement.', demo:'#', github:'#' }
    };

    function openModal(id){
      const data = PROJECTS[id];
      if(!data) return;
      document.getElementById('modal-title').textContent = data.title;
      document.getElementById('modal-role').textContent = 'Role: ' + data.role;
      document.getElementById('modal-body').textContent = data.details;
      document.getElementById('modal-demo').href = data.demo;
      document.getElementById('modal-github').href = data.github;
      document.getElementById('project-modal').classList.remove('hidden');
      document.getElementById('project-modal').classList.add('flex');
    }
    function closeModal(){
      document.getElementById('project-modal').classList.remove('flex');
      document.getElementById('project-modal').classList.add('hidden');
    }

    // contact form -> mailto
    document.getElementById('contact-form').addEventListener('submit', function(e){
      e.preventDefault();
      const form = e.target;
      const name = form.name.value;
      const email = form.email.value;
      const message = form.message.value;
      const subject = encodeURIComponent('Message from ' + name + ' (' + email + ')');
      const body = encodeURIComponent(message);
      window.location.href = `mailto:abhinavkrishnack8089@gmail.com?subject=${subject}&body=${body}`;
    });

    // close modal when clicking outside content
    document.getElementById('project-modal').addEventListener('click', function(e){
      if(e.target === this) closeModal();
    });
  </script>
